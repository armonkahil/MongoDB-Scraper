<div class="container-fluid my-5 animated fadeIn delay2s">
  <div class="card">
    <div class="card-header align-items-center">
      <!--Article title-->
      <h5 class="float-left align-items-center">
        <a href="{{this.link}}" class="" target="_blank"><i class="far fa-newspaper"></i> {{this.title}}</a>
      </h5>
      <!--Delete Button-->
      <button type="button" class="btn btn-danger btn-sm float-right delete align-items-center mx-2" id="{{this.id}}"><i class="fas fa-trash"></i> Delete</button>
      <!--Comment Button-->
      <button type="button" class="btn btn-success btn-sm float-right comment align-items-center mx-2" id="{{this.id}}"><i class="far fa-comments"></i> Comment</button>
    </div>
    <!--Story Section-->
    <div class="card-body">
      <p class="card-text">{{this.body}}</p>
    </div>
    <!--Modal Section-->
    <div class="modal fade" id="{{this.id}}" data-backdrop="static" tabindex="-1" role="dialog"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            leave comment
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Understood</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>