<div class="container-fluid my-5 animated fadeIn delay2s">
  <div class="card">
    <div class="card-header align-items-center">
      <!--Article title-->
      <h5 class="float-left align-items-center">
        <a href="{{this.link}}" class="" target="_blank"><i class="far fa-newspaper"></i> {{this.title}}</a>
      </h5>
      <!--Delete Button-->
      <button type="button" class="btn btn-danger btn-sm float-right delete align-items-center mx-2" value={{this.id}}><i class="fas fa-trash"></i> Delete</button>
      <!--Comment Button-->
      <button type="button" class="btn btn-success btn-sm float-right comment align-items-center mx-2" value="{{this.id}}" data-toggle="modal" data-target="#{{this.id}}"><i class="far fa-comments"></i> Comment</button>
    </div>
    <!--Story Section-->
    <div class="card-body">
      <p class="card-text">{{this.body}}</p>
    </div>
  </div>
</div>
    <!--Modal Section-->
    <div class="modal fade modalComment" id="{{this.id}}" data-backdrop="static" tabindex="-1" role="dialog"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Comments</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body ">
            <ul>
              {{#each this.comment}}
              <li>{{this.comment}}</li>
              {{/each}}
            </ul>
            <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
            leave comment
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Understood</button>
          </div>
        </div>
      </div>
    </div>