<div class="row">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header justify-content-end">
        <h4>{{this.title}}</h4>
        <ul class="nav">
          <li class="nav-item">
            <a href="{{this.link}}" class="btn btn-primary btn-sm" target="_blank">visit</a>
          </li>
          <li class="nav-item">
            <button type="button" class="btn btn-primary comment" data-toggle="modal" data-target="#{{this.id}}">
              Comment
            </button>
          </li>
        </ul>
      </div>
      <div class="card-body">
        <p class="card-text font-effect-shadow-multiple">{{this.body}}</p>
      </div>
      <div class="modal fade" id="{{this.id}}" data-backdrop="static" tabindex="-1" role="dialog"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              leave comment
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Understood</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>